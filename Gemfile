source "https://rubygems.org"
ruby RUBY_VERSION

# This is the base Jekyll requirement
gem "jekyll"

# GitHub Pages compatibility
gem "github-pages", group: :jekyll_plugins

# Essential plugins for your needs
group :jekyll_plugins do
  # For SEO optimization
  gem "jekyll-seo-tag"
  
  # For generating sitemaps
  gem "jekyll-sitemap"
  
  # For easier pagination of blog posts
  gem "jekyll-paginate"
  
  # For generating RSS feed
  gem "jekyll-feed"

end
